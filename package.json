{
  "name": "planit-green",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "pnpm -r --filter ./packages/* run build && pnpm -r --filter ./apps/* run build",
    "dev": "pnpm --filter @planit/web dev",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "next": "16.1.1",
    "react": "19.0.0",
    "react-dom": "19.0.0"
  }
}
